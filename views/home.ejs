<script src="file.js" charset="utf-8"></script>
<title>File manager</title>

<div class="jumbotron bg-dark text-light">

<h1> File manager </h1>

<h2> Files: </h2>
<form action="/del" method="post">
<div id="todotask">
  <ul id="todo">
    <% if(files.length != 0){ %>
        <% for( var i = 0; i < files.length; i++){ %>
            <li style="list-style: none;"><input class="form-check-input" type="radio" name="check" value="<%= files[i].name %>" /> <%= files[i].name %> </li>
        <% }; %>
    <% } else{ %>
        <p>There are no files!</p>
    <% } %>
  </ul>
<button id="rem" class="btn btn-sm btn-secondary shadow" type="submit"> Delete file </button>
<button id="edit" class="btn btn-sm btn-secondary shadow" type="submit" formaction="/edit"> Edit file </button>
</form>
<form>
  <br>
<div class="input-group justify-content-center">
  <div class="input-group-append">
    <input type="text" id="name" placeholder="Enter file name" class="form-control-sm" autocomplete="off" required>
  </div>
  <div class="input-group-append">
    <button id="create" class="btn btn-sm btn-secondary shadow" type="button"> Create new file </button>
  </div>
</div>

</div>
